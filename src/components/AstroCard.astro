---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<slot></slot>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: var(--clp-space-md);
		background-color: var(--clp-color-surface-accent);
		border-radius: 7px;
		box-shadow: var(--clp-shadow-lg);
		hyphens: auto;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: var(--clp-space-sm);
		border-radius: 8px;
		opacity: 0.8;
		color: var(--clp-color-text-link);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		
	}

</style>