---
import BaseHead from '../components/BaseHead.tsx'; 
import Navigation from '../components/Navigation/Navigation.tsx';
import '../scss/style.scss';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<BaseHead />
	<body>
		<header>
			<Navigation />
		</header>
		<slot />
	</body>
</html>
<style is:global>

	html {
		font-family: var(--clp-font-family-sans);
		background: var(--clp-color-surface-base);
		color: var(--clp-color-text-base);   
	}
	
</style>
